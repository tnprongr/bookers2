<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/7cae1128b7.js" crossorigin="anonymous"></script>
  </head>

  <body>

   <header class="bg-dark">
   <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
     </button>
     <a href="https://1fb350eda819408dba227a55150f5b40.vfs.cloud9.ap-northeast-1.amazonaws.com/">Bookers</a>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav ml-auto">
     <% if user_signed_in? %>
      <li class="nav-item">
      <%= link_to(root_path) do %>
       <span class="fa-duotone fa-house-chimney-window">Home</span>
      <% end %>
      </li>
      <li class="nav-item">
      <%= link_to 'Users', users_path(current_user.id) %>
      </li>
      <li class="nav-item">
      <%= link_to 'Books', books_path(current_user.id) %>
      </li>
      <li class="nav-item">
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      </li>
     <% else %>
      <li class="nav-item">
      <%= link_to "Home", root_path %>
      </li>
      <li class="nav-item">
      <%= link_to "About", about_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Log in", new_user_session_path %>
      </li>
     <% end %>
   </ul>
   </div>
   </nav>
   </header>

   <%= yield %>

   <footer class="row justify-content-center">
     CopyRight Infratop.inc
   </footer>

  </body>

</html>
